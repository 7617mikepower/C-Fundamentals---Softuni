#include <iostream>
using namespace std;

const int maxSize = 100;

int getArr(int arr[], int length)
{
    int sum = 0;
    int sumOdd = 0;
    int sumEven = 0;

    for(size_t i{0}; i<length; i++)
    {
        cin >> arr[i];
        sum += arr[i];
    }
    int average = sum / length;

    for(size_t i{0}; i<length; i++)
    {
        if ((arr[i]<= average) && (i%2==0))
        {
            sumOdd += arr[i];
        }
        else
        {
            if (arr[i]<= average)
                sumEven += arr[i];
        }
    }
return sumOdd*sumEven;
}

int main()
{
    int length;
    cin >> length;
    int arr[maxSize]{};

    if (length <= maxSize)
    {
     cout << getArr(arr, length)<< endl;
    }
    else return -1;

    return 0;
}
