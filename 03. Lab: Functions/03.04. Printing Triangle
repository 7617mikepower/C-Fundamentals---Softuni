//Create a function for printing triangles.
#include <iostream>

using namespace std;

void triangle(int a)
{
    for (size_t i {1}; i<=a; i++)
    {
        for (size_t j {1}; j<=i; j++)
        {
            cout << j <<" ";
        }
        cout << endl;
    }

    for (size_t i {a}; i>=1; i--)
    {
        for (size_t j {1}; j<=i-1; j++)
        {
            cout << j <<" ";
        }
        cout << endl;
    }
}

int main()
{
    int a;
    cin >> a;

    triangle(a);
    return 0;
}
