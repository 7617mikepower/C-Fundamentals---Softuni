//You will be given 3 lines of input â€“ student name (string), age (integer number), and average grade (floating-point number).
//Your task is to print all the info about the student in the following format, where grade is formatted with 2 digits: 
//"Name: {student name}, Age: {student age}, Grade: {student grade}".


#include <iostream>
#include <string>
using namespace std;

int main()
{
    string name;
    int age;
    double studentGrade;

    cin >> name >> age >> studentGrade;

    cout.setf(ios::fixed);
    cout.precision(2);
    cout << "Name: " << name << ", Age: " << age << ", Grade: " << studentGrade << endl;

    return 0;
}
